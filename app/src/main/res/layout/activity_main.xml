<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

    <Button
        android:id="@+id/NewHandButton"
        android:layout_width="137dp"
        android:layout_height="56dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="15dp"
        android:text="@string/new_hand_button"
        app:layout_constraintBottom_toTopOf="@+id/SavedHandButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SavedHandButton"
        android:layout_width="137dp"
        android:layout_height="56dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="15dp"
        android:text="@string/saved_hands_button"
        app:layout_constraintBottom_toTopOf="@+id/settingsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NewHandButton" />

<Button
    android:id="@+id/settingsButton"
    android:layout_width="137dp"
    android:layout_height="56dp"
    android:layout_marginStart="124dp"
    android:layout_marginLeft="124dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="124dp"
    android:layout_marginRight="124dp"
    android:layout_marginBottom="15dp"
    android:text="@string/settings_button"
    app:layout_constraintBottom_toTopOf="@+id/logOutButton"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/SavedHandButton" />

<Button
    android:id="@+id/logOutButton"
    android:layout_width="137dp"
    android:layout_height="59dp"
    android:layout_marginStart="124dp"
    android:layout_marginLeft="124dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="124dp"
    android:layout_marginRight="124dp"
    android:layout_marginBottom="63dp"
    android:text="@string/log_out_button"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/settingsButton" />

</android.support.constraint.ConstraintLayout>